<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Produtos</title>
</head>
<body>
    <p>Nome: <%= name %></p>
    <p>Linguagem: <%= lang%></p>
    <h4>Produtos</h4>
    <ul>
        <% produtos.forEach(function(produtos) { %>
        <li><%= produtos.name%> - <%= produtos.price%> </li>
       <%})%>
    </ul>

    <% if(showMessage) { %>
        <h2>Mensagem!!!</h2>
        <% } else { %>
            <h2>NÃ£o Exibir Mensagem</h2>
            <% } %>
</body>
</html>