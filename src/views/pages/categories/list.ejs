<%- include('../partials/header.ejs') %>

<table class="table table-striped table-">
    <tr>
       <th>id</th>
       <th>Nome</th>
       <th>slug</th>
       <th>Ação</th>
    </tr>
 
    <% for (var i = 0; i < allCategories.length; i++) { %>
     <tr>
       <td><%= allCategories[i].id %></td>
       <td><%= allCategories[i].name %></td>
       <td><%= allCategories[i].slug %></td>
       <td>
         <a href ="/categories/update/<%=allCategories[i].id%>" type="submit" class="btn btn-primary">Editar</a>
         <a href ="/categories/delete/<%=allCategories[i].id%>" type="submit" class="btn btn-danger ml-2">Deletar</a>
      </td>
     </tr>    
    <% } %>
 </table>

